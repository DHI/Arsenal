{
  "compilerOptions": {
    "strict": true,
    "target": "ES2020",
    "module": "ES2020",
    "outDir": "./x",
    "paths": {
      "__css": ["./src/__css"]
    },
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": true,
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src",
    "src/__config/*.d.ts",
    "*.config.ts"
  ]
}