{
  "name": "@dhi/arsenal",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/DHI/Arsenal"
  },
  "scripts": {
    "start": "pnpm run start --filter ./apps/stories",
    "clean": "pnpm clean:node_modules; pnpm clean:build",
    "clean:build": "pnpm -r exec rimraf tsconfig.tsbuildinfo ./x",
    "clean:node_modules": "pnpm -r exec rimraf **/node_modules/**",
    "release:version": "changeset && changeset version",
    "release:publish": "pnpm -r publish",
    "build": "pnpm run build:libs && pnpm -r run build --filter ./apps",
    "build:libs": "tsc -b .",
    "dev:libs": "pnpm build:libs -- -w"
  },
  "dependencies": {
    "@emotion/react": "11.4.1",
    "mobx-react-lite": "^3.2.1",
    "react": "17.0.2",
    "react-dom": "17.0.2"
  },
  "devDependencies": {
    "@changesets/cli": "^2.17.0",
    "@types/node": "^16.9.6",
    "@types/react": "17.0.24",
    "@types/react-dom": "17.0.9",
    "eslint": "^7.32.0",
    "eslint-config-nfour": "^1.3.0",
    "rimraf": "^3.0.2",
    "typescript": "~4.4.3"
  },
  "pnpm": {
    "overrides": {
      "mobx": "6.3.3",
      "mobx-react-lite": "3.2.1",
      "react": "17.0.2",
      "react-dom": "17.0.2",
      "@types/react": "17.0.24",
      "@emotion/react": "11.4.1"
    }
  }
}
