{
  "name": "@dhi/arsenal",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/DHI/Arsenal"
  },
  "scripts": {
    "start": "pnpm run start --filter ./apps/stories",
    "clean": "pnpm clean:build",
    "clean:build": "pnpm -r exec rimraf ./x ./tsconfig.tsbuildinfo",
    "clean:node_modules": "pnpm -r exec rimraf node_modules",
    "release:version": "changeset && changeset version",
    "release:publish": "pnpm -r publish",
    "build": "pnpm run build:libs && pnpm -r run build --filter ./apps",
    "build:libs": "tsc -b .",
    "dev:libs": "pnpm build:libs -- -w"
  },
  "devDependencies": {
    "@changesets/cli": "^2.17.0",
    "@types/node": "^16.9.6",
    "@types/react": "17.0.24",
    "@types/react-dom": "17.0.9",
    "css-loader": "^6.3.0",
    "esbuild": "^0.13.1",
    "esbuild-loader": "^2.15.1",
    "eslint": "^7.32.0",
    "eslint-config-nfour": "^1.3.0",
    "file-loader": "^6.2.0",
    "fork-ts-checker-webpack-plugin": "^6.3.3",
    "rimraf": "^3.0.2",
    "style-loader": "^3.3.0",
    "ts-node": "^10.2.1",
    "typescript": "~4.4.3",
    "webpack": "^5.53.0",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^4.2.1"
  },
  "pnpm": {
    "overrides": {
      "mobx": "6.3.3",
      "mobx-react-lite": "3.2.1",
      "react": "17.0.2",
      "react-dom": "17.0.2",
      "@types/react": "17.0.24",
      "@emotion/react": "11.4.1"
    }
  }
}
