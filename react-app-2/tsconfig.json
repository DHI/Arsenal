{
  "compilerOptions": {
    "strict": true,
    "target": "ES2020",
    "module": "ES2020",
    "outDir": "./.build",
    "paths": {
      "__css": ["./src/__css"]
    },
    "allowJs": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": true,
    "noEmit": true,
    "jsx": "preserve"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src",
    "src/__config/*.d.ts",
    "*.js",
    ".eslintrc.js"
  ]
}