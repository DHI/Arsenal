{
  "compilerOptions": {
    "strict": true,
    "target": "ES2020",
    "module": "ES2020",
    "outDir": "./.build",
    "allowJs": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "declaration": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": true
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src",
    "snowpack.config.js"
  ]
}