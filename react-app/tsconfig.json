{
  "compilerOptions": {
    "strict": true,
    "target": "es2018",
    "module": "CommonJS",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "lib": [ "dom", "esnext" ],
    "jsx": "react",
    "incremental": true,
    "sourceMap": true,
    // This *should* make first-time compiles faster, even in CI
    "tsBuildInfoFile": "./tsconfig.tsbuildinfo",
  },
  "include": ["typings.d.ts", "client", "webpack.config.ts", ".eslintrc.js"]
}